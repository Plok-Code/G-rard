# Token du bot Discord (https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=

# Identifiants du salon et du role a mentionner pour Trello
DISCORD_TARGET_CHANNEL_ID=
DISCORD_PING_ROLE_ID=

# Identifiant du salon Drive (notif Google Drive)
DISCORD_DRIVE_CHANNEL_ID=
# Optionnel: role a ping specifique pour Drive (sinon reutilise DISCORD_PING_ROLE_ID)
DISCORD_DRIVE_PING_ROLE_ID=
# Identifiant du salon GitHub
DISCORD_GITHUB_CHANNEL_ID=
# Optionnel: role specifique pour GitHub
DISCORD_GITHUB_PING_ROLE_ID=

# Informations Trello
# URL publique du webhook (doit correspondre exactement a celle declaree chez Trello)
TRELLO_WEBHOOK_CALLBACK_URL=
# Secret/Trello API secret
TRELLO_WEBHOOK_SECRET=
# Secret du webhook GitHub (Trello/Webhook > Secret)
GITHUB_WEBHOOK_SECRET=

# Google Drive (compte de service)
GOOGLE_SERVICE_ACCOUNT_EMAIL=
# Coller la cle privee en conservant les retours a la ligne "\n"
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Optionnel: ID d'un Drive partage (Shared Drive). Laisser vide pour My Drive
GOOGLE_DRIVE_SHARED_DRIVE_ID=
# ID du dossier a surveiller (dans My Drive ou Shared Drive)
GOOGLE_DRIVE_FOLDER_ID=
# Intervalle de polling en millisecondes (defaut 15000)
GOOGLE_DRIVE_POLL_INTERVAL_MS=15000
# Chemin du fichier de suivi du token Drive
GOOGLE_DRIVE_STATE_FILE=drive-state.json

# Port HTTP local (facultatif)
PORT=3000
